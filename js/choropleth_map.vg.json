{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Number of Terrorst Attacks",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/shlokthakur1/FIT3179/main/js/ne_110m_admin_0_countries.json",
    "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
  },
  "transform": [{
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/shlokthakur1/FIT3179/main/data/TerrorismAttacks.csv"
        },
        "key": "Country",
        "fields": ["TerrorismAttacks"]
      }
    }
  ],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "field": "TerrorismAttacks",
      "type": "quantitative",
      "scale": {"type": "threshold",
 "domain": [50,100,150,200,250,300,350],
 "range": ["#472d7b", "#3b528b", "#2c728e", "#21918d","#28ae80","#5dc963","#abdc32"]}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "TerrorismAttacks", "type": "quantitative"}
    ]
  }

}